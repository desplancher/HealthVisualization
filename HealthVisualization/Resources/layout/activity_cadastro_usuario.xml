<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingVertical="@dimen/inner_frame_layout_vertical_padding"
    android:paddingHorizontal="@dimen/inner_frame_layout_horizontal_padding">

    <!-- OK - TODO: Adicionar hint para "Digite aqui o nome" nos arquivos de valores -->
    <EditText
        android:inputType="textAutoComplete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/cadastro_digite_nome"
        android:minWidth="25px"
        android:minHeight="25px"
        android:id="@+id/editTextNome" />

    <!-- OK - TODO: Adicionar hint para "Digite aqui o email" nos arquivos de valores -->
    <EditText
        android:inputType="textEmailAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/cadastro_digite_email"
        android:minWidth="25px"
        android:minHeight="25px"
        android:id="@+id/editTextEmail" />

    <!-- OK - TODO: Adicionar hint para "Digite aqui a senha" nos arquivos de valores -->
    <EditText
        android:inputType="textPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/cadastro_digite_senha"
        android:id="@+id/editTextSenha" />

    <!-- OK - TODO: Adicionar hint para "Confirme aqui a senha" nos arquivos de valores -->
    <EditText
        android:inputType="textPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="string/cadastro_digite_senha_novamente"
        android:id="@+id/editTextConfirmarSenha" />


    <!-- OK - TODO: Adicionar dois novos campos (alem de nome e email) de EditText -->
    <EditText
        android:inputType="textAutoComplete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/cadastro_digite_cpf"
        android:minWidth="25px"
        android:minHeight="25px"
        android:id="@+id/editTextNome" />

    <EditText
        android:inputType="textAutoComplete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/cadastro_digite_telefone"
        android:minWidth="25px"
        android:minHeight="25px"
        android:id="@+id/editTextNome" />    
        
        <Button
        android:text="Cadastrar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/buttonCadastrar" />

</LinearLayout>