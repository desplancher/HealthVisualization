<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- OK - TODO: Mover o padding para res/values/dimens.xml -->
    <!-- OK - TODO: Mover o textSize para res/values/dimens.xml -->
    <!-- OK - TODO: Mover a cor do texto para res/values/colors.xml -->
    <TextView
        android:id="@+id/locationTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:padding="@dimen/actvity_localizacao_padding"
        android:text="Latitude: 0.0, Longitude: 0.0"
        android:textSize="@dimen/actvity_localizacao_textSize"
        android:textColor="@color/text_color" />
    
</RelativeLayout>
